<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_expense_sheet_register_payment_view_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.register.payment.view.form</field>
        <field name="model">hr.expense.sheet.register.payment.wizard</field>
        <field
            name="inherit_id"
            ref="hr_expense.hr_expense_sheet_register_payment_view_form"
        />
        <field name="arch" type="xml">
            <field name="payment_difference_handling" position="after">
                <field
                    name="wt_tax_id"
                    attrs="{'invisible': [('payment_difference_handling', '!=', 'reconcile')]}"
                    placeholder="Withholding Tax"
                    options="{'no_create': True, 'no_open': True}"
                />
            </field>
        </field>
    </record>
</odoo>
