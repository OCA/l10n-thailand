<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Thai Goverment has clearing terms 30 days already -->
    <record id="reminder_definition_view_form" model="ir.ui.view">
        <field name="name">reminder.definition.form</field>
        <field name="model">reminder.definition</field>
        <field
            name="inherit_id"
            ref="hr_expense_advance_overdue_reminder.reminder_definition_view_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='left']/label[@for='clearing_terms_days']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//group[@name='left']/div[@name='clearing_term']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
