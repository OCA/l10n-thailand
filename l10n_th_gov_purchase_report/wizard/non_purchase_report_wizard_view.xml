<odoo>
    <record id="non_purchase_report_wizard_form" model="ir.ui.view">
        <field name="name">non.purchase.report.wizard.form</field>
        <field name="model">non.purchase.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="criteria">
                    <group>
                        <field
                            name="date_range_id"
                            options="{'no_create': True, 'no_open': True}"
                        />
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" />
                    </group>
                </group>
                <footer>
                    <button
                        name="button_export_xlsx"
                        string="Export XLSX"
                        type="object"
                        default_focus="1"
                        context="{'model': 'report.non.purchase.report'}"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="non_purchase_report_action" model="ir.actions.act_window">
        <field name="name">Non Procurement Report</field>
        <field name="res_model">non.purchase.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="non_purchase_report_menu"
        action="l10n_th_gov_purchase_report.non_purchase_report_action"
        parent="l10n_th_gov_purchase_report.purchase_reports_l10n_th_menu"
        sequence="20"
        groups="purchase.group_purchase_manager"
    />
</odoo>
