<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="l10n_th_account_tax.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='l10n_th_account_settings']" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="bbl_ewht"
                    groups="account.group_account_user"
                >
                    <div class="o_setting_left_pane">
                        <field name="bbl_config_ewht" invisible="1" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label
                            string="BBL Bank Payment Export - eWHT"
                            for="bbl_config_ewht"
                        />
                        <div class="text-muted" id="payment_bank_bbl_ewht">
                            Payment Export BBL with eWHT.<br />
                            * Please note that this function has been disabled as it is intended for use in a future release.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
