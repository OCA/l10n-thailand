<odoo>
    <record id="bank_payment_export_view_form" model="ir.ui.view">
        <field name="name">bank.payment.export.view.form</field>
        <field name="model">bank.payment.export</field>
        <field
            name="inherit_id"
            ref="l10n_th_bank_payment_export.bank_payment_export_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='effective_date']" position="attributes">
                <attribute name="attrs">{
                    'required': [('is_required_effective_date', '!=', False)],
                    'readonly': [('bank', '=', 'BKKBTHBK')]
                }</attribute>
            </xpath>
            <!-- Information -->
            <xpath
                expr="//page[@name='information']//group[@name='left_information']"
                position="inside"
            >
                <field name="bbl_is_editable" invisible="1" />
                <field
                    name="bbl_bank_type"
                    string="Bank Type"
                    attrs="{'invisible': 1, 'required': [('bbl_is_editable', '!=', False)]}"
                />
                <field
                    name="bbl_company_bank_account"
                    attrs="{'invisible': [('bbl_is_editable', '!=', True)], 'required': [('bbl_is_editable', '!=', False)]}"
                    options="{'no_create': True}"
                />
                <field
                    name="bbl_product_code"
                    attrs="{'invisible': [('bbl_is_editable', '!=', True)], 'required': [('bbl_is_editable', '!=', False)]}"
                />
                <field
                    name="bbl_bot_type"
                    attrs="{'invisible': [('bbl_is_editable', '!=', True)], 'required': [('bbl_is_editable', '!=', False)]}"
                />
            </xpath>
            <xpath
                expr="//page[@name='information']//group[@name='right_information']"
                position="inside"
            >
                <field
                    name="bbl_payee_charge"
                    attrs="{'invisible': [('bbl_is_editable', '!=', True)], 'required': [('bbl_is_editable', '!=', False)]}"
                />
                <field
                    name="bbl_credit_advice"
                    attrs="{'invisible': [('bbl_is_editable', '!=', True)], 'required': [('bbl_is_editable', '!=', False)]}"
                />
            </xpath>
            <!-- System configuration -->
            <xpath
                expr="//page[@name='information']/group[@name='system_config']"
                position="inside"
            >
                <field
                    name="config_bbl_company_code"
                    options="{'no_create': True, 'no_create_edit': True}"
                    domain="[('field_id.name', '=', 'config_bbl_company_code')]"
                    attrs="{'invisible': [('bbl_is_editable', '!=', True)], 'required': [('bbl_is_editable', '!=', False)]}"
                />
                <field
                    name="config_bbl_customer_batch_smart"
                    options="{'no_create': True, 'no_create_edit': True}"
                    domain="[('field_id.name', '=', 'config_bbl_customer_batch_smart')]"
                    attrs="{'invisible': [('bbl_is_editable', '!=', True)], 'required': [('bbl_is_editable', '!=', False), ('bbl_bank_type', '=', 'smart')]}"
                />
                <field
                    name="config_bbl_customer_batch_direct"
                    options="{'no_create': True, 'no_create_edit': True}"
                    domain="[('field_id.name', '=', 'config_bbl_customer_batch_direct')]"
                    attrs="{'invisible': [('bbl_is_editable', '!=', True)], 'required': [('bbl_is_editable', '!=', False), ('bbl_bank_type', '=', 'direct')]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
