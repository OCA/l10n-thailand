<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_tax_branch_operating_unit_form" model="ir.ui.view">
        <field name="name">tax.branch.operating.unit.form</field>
        <field name="model">tax.branch.operating.unit</field>
        <field name="arch" type="xml">
            <form string="Operating Unit">
                <sheet>
                    <group name="main_group">
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tax_branch_operating_unit_tree" model="ir.ui.view">
        <field name="name">tax.branch.operating.unit.tree</field>
        <field name="model">tax.branch.operating.unit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="action_tax_branch_operating_unit_tree" model="ir.actions.act_window">
        <field name="name">Tax Branch Operating Units</field>
        <field name="res_model">tax.branch.operating.unit</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p
                class="oe_view_nocontent_create"
            >Click to start a new Tax Branch Operating Unit.</p>
        </field>
    </record>
    <menuitem
        action="action_tax_branch_operating_unit_tree"
        id="menu_action_tax_branch_operating_unit_tree"
        parent="base.menu_users"
        groups="operating_unit.group_multi_operating_unit"
    />
</odoo>
