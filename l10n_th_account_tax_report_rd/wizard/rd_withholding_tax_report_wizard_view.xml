<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_rd_withholding_tax_report_wizard" model="ir.ui.view">
        <field name="name">rd.withholding.tax.report.wizard.view</field>
        <field name="model">rd.withholding.tax.report.wizard</field>
        <field name="arch" type="xml">
            <form string="RD Withholding Tax Report Options">
                <group>
                    <group>
                        <field name="income_tax_form" />
                        <field name="show_cancel" />
                    </group>
                    <group>
                        <field
                            name="date_range_id"
                            options="{'no_create_edit': True, 'no_open': True}"
                        />
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="company_id" groups="base.group_multi_company" />
                    </group>
                </group>
                <footer>
                    <button
                        name="button_export_pdf"
                        string="Export PDF"
                        type="object"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_rd_withholding_tax_report_wizard" model="ir.actions.act_window">
        <field name="name">WHT RD Report</field>
        <field name="res_model">rd.withholding.tax.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_rd_withholding_tax_report_wizard" />
        <field name="target">new</field>
    </record>
    <menuitem
        id="menu_rd_withholding_tax_report"
        name="WHT RD Report"
        parent="account.menu_finance_reports"
        action="action_rd_withholding_tax_report_wizard"
        sequence="30"
    />
</odoo>
