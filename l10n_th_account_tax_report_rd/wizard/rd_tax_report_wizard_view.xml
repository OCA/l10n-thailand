<odoo>
    <record id="rd_tax_report_wizard_form" model="ir.ui.view">
        <field name="name">rd.tax.report.wizard.form</field>
        <field name="model">rd.tax.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="criteria">
                    <group>
                        <field
                            name="company_id"
                            options="{'no_create_edit': True, 'no_open': True}"
                            groups="base.group_multi_company"
                        />
                        <field
                            name="tax_id"
                            options="{'no_create_edit': True, 'no_open': True}"
                        />
                    </group>
                    <group>
                        <field
                            name="date_range_id"
                            options="{'no_create_edit': True, 'no_open': True}"
                        />
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
                </group>
                <footer>
                    <button
                        name="button_export_pdf"
                        string="Export PDF"
                        type="object"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_rd_tax_report_wizard" model="ir.actions.act_window">
        <field name="name">Thai Tax RD Reports</field>
        <field name="res_model">rd.tax.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem
        id="menu_rd_tax_report"
        parent="account.menu_finance_reports"
        action="action_rd_tax_report_wizard"
        name="Thai Tax RD Report"
        groups="account.group_account_manager,account.group_account_user"
    />
</odoo>
