<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_th_account_tax.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_invoice_ids']/tree" position="inside">
                <field name="company_id" invisible="1" />
                <field
                    name="branch_id"
                    domain="[('company_id', '=', company_id)]"
                    options="{'no_create': True}"
                />
            </xpath>
        </field>
    </record>
    <record id="view_tax_invoice_search" model="ir.ui.view">
        <field name="model">account.move.tax.invoice</field>
        <field name="inherit_id" ref="l10n_th_account_tax.view_tax_invoice_search" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter
                    string="Branch"
                    name="group_by_branch"
                    context="{'group_by':'branch_id'}"
                />
            </xpath>
        </field>
    </record>
    <record id="view_tax_invoice_form" model="ir.ui.view">
        <field name="model">account.move.tax.invoice</field>
        <field name="inherit_id" ref="l10n_th_account_tax.view_tax_invoice_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field
                    name="branch_id"
                    domain="[('company_id', '=', company_id)]"
                    options="{'no_create': True}"
                />
            </xpath>
        </field>
    </record>
    <record id="view_tax_invoice_tree" model="ir.ui.view">
        <field name="model">account.move.tax.invoice</field>
        <field name="inherit_id" ref="l10n_th_account_tax.view_tax_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_base_amount']" position="before">
                <field name="branch_id" optional="show" />
            </xpath>
        </field>
    </record>
</odoo>
