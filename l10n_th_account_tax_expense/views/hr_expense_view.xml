<odoo>
    <record id="hr_expense_view_form" model="ir.ui.view">
        <field name="name">hr.expense.view.form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="before">
                <field
                    name="bill_partner_id"
                    force_save="1"
                    attrs="{'readonly': [('tax_ids', '=', []), ('wht_tax_id', '=', False)]}"
                    title="Vendor related to tax invoice and withholding tax"
                />
            </xpath>
            <xpath expr="//field[@name='tax_ids']" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': ['|', ('is_editable', '=', False), ('advance', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='tax_ids']" position="after">
                <field
                    name="wht_tax_id"
                    options="{'no_create': True}"
                    attrs="{'readonly': [('advance', '=', True)]}"
                />
            </xpath>
            <xpath expr="//field[@name='payment_mode']" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': [('advance', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">view.hr.expense.sheet.form</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
        <field name="arch" type="xml">
            <field name="account_move_id" position="after">
                <field
                    name="wht_move_id"
                    attrs="{'invisible': [('wht_move_id', '=', False)]}"
                />
            </field>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='tax_ids']"
                position="after"
            >
                <field
                    name="wht_tax_id"
                    options="{'no_create': True}"
                    optional="show"
                    attrs="{'readonly': [('advance', '=', True)]}"
                />
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='tax_ids']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': [('advance', '=', True)]}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='date']"
                position="before"
            >
                <field name="bill_partner_id" optional="show" />
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='date']"
                position="after"
            >
                <field
                    name="product_id"
                    optional="hide"
                    groups="account.group_account_user"
                />
                <field
                    name="account_id"
                    optional="hide"
                    groups="account.group_account_user"
                />
            </xpath>
        </field>
    </record>

    <record id="action_create_withholding_entry" model="ir.actions.server">
        <field name="name">Create Withholding Tax JV</field>
        <field name="model_id" ref="hr_expense.model_hr_expense_sheet" />
        <field name="binding_model_id" ref="hr_expense.model_hr_expense_sheet" />
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
            action = env['hr.expense.sheet'].action_create_withholding_tax_entry()
        </field>
    </record>

</odoo>
