<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="create_withholding_tax_cert_multi" model="ir.ui.view">
        <field name="name">Create Multi Withholding Tax Cert.</field>
        <field name="model">create.withholding.tax.cert</field>
        <field name="arch" type="xml">
            <form string="Create Multi Withholding Tax Cert.">
                <p
                >Create new witholding tax cert. based on account move for withholding tax.</p>
                <group>
                    <group name="left">
                        <field name="wt_account_ids" widget="many2many_tags" />
                    </group>
                    <group name="right">
                        <field
                            name="income_tax_form"
                            attrs="{'required': [('wt_account_ids', '!=', False)]}"
                        />
                        <field
                            name="wt_cert_income_type"
                            attrs="{'required': [('wt_account_ids', '!=', False)]}"
                        />
                    </group>
                </group>
                <footer>
                    <button
                        string="Create"
                        name="create_wt_cert_multi"
                        type="object"
                        default_focus="1"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record
        id="action_payment_create_withholding_tax_cert_multi"
        model="ir.actions.act_window"
    >
        <field name="name">Create Withholding Tax Certificates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.withholding.tax.cert</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_withholding_tax_cert_multi" />
        <field name="context">{}</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_payment" />
    </record>
    <record
        id="action_move_create_withholding_tax_cert_multi"
        model="ir.actions.act_window"
    >
        <field name="name">Create Withholding Tax Certificates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.withholding.tax.cert</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_withholding_tax_cert_multi" />
        <field name="context">{}</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move" />
    </record>
</odoo>
