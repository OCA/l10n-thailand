<odoo>
    <record id="tax_report_wizard_form" model="ir.ui.view">
        <field name="name">tax.report.wizard.form</field>
        <field name="model">tax.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="criteria">
                    <group>
                        <field
                            name="company_id"
                            options="{'no_create_edit': True}"
                            groups="base.group_multi_company"
                        />
                        <field name="tax_id" options="{'no_create_edit': True}" />
                    </group>
                    <group>
                        <field
                            name="date_range_id"
                            options="{'no_create_edit': True}"
                        />
                    </group>
                </group>
                <footer>
                    <button
                        name="button_export_html"
                        string="View"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    or
                    <button
                        name="button_export_pdf"
                        string="Export PDF"
                        type="object"
                    />
                    or
                    <button
                        name="button_export_xlsx"
                        string="Export XLSX"
                        type="object"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_tax_report" model="ir.actions.act_window">
        <field name="name">Thai Tax Reports</field>
        <field name="res_model">tax.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem
        id="menu_tax_report"
        parent="account.menu_finance_reports"
        action="action_tax_report"
        name="Thai Tax Report"
        groups="account.group_account_manager,account.group_account_user"
    />
</odoo>
