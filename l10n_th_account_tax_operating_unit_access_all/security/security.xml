<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <record id="group_all_ou_tax_invoice" model="res.groups">
        <field name="name">Access all OUs' tax invoices</field>
        <field name="category_id" ref="operating_unit.module_operating_units" />
    </record>
    <record id="group_all_ou_wht_cert" model="res.groups">
        <field name="name">Access all OUs' withholding tax certificates</field>
        <field name="category_id" ref="operating_unit.module_operating_units" />
    </record>

    <function model="ir.rule" name="write">
        <value
            eval="[ref('l10n_th_account_tax_operating_unit.ir_rule_tax_invoice_allowed_operating_units')]"
        />
        <value
            eval="{'domain_force': &quot;['|','|',(1, '=', 1) if user.has_group('l10n_th_account_tax_operating_unit_access_all.group_all_ou_tax_invoice') else (0, '=', 1),('operating_unit_id','=',False),('operating_unit_id','in', user.operating_unit_ids.ids)]&quot;}"
        />
    </function>
    <function model="ir.rule" name="write">
        <value
            eval="[ref('l10n_th_account_tax_operating_unit.ir_rule_wht_cert_allowed_operating_units')]"
        />
        <value
            eval="{'domain_force': &quot;['|','|',(1, '=', 1) if user.has_group('l10n_th_account_tax_operating_unit_access_all.group_all_ou_wht_cert') else (0, '=', 1), ('operating_unit_id','=',False), ('operating_unit_id','in', user.operating_unit_ids.ids)]&quot;}"
        />
    </function>
</odoo>
