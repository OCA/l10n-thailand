<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <record id="account_asset_parent_view_form" model="ir.ui.view">
        <field name="name">account.asset.parent.form</field>
        <field name="model">account.asset.parent</field>
        <field name="arch" type="xml">
            <form string="Parent Asset">
                 <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_view_assets"
                            string="Assets"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-cube"
                        />
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group name="group_left">
                            <field name="active" invisible="1" />
                            <field name="name" />
                            <field
                                name="company_id"
                                widget="selection"
                                groups="base.group_multi_company"
                            />
                        </group>
                        <group name="group_right">
                            <field name="note" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="account_asset_parent_view_tree" model="ir.ui.view">
        <field name="name">account.asset.parent.tree</field>
        <field name="model">account.asset.parent</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="asset_ids" widget="many2many_tags" optional="hide" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="show"
                />
            </tree>
        </field>
    </record>
    <record id="account_asset_parent_view_search" model="ir.ui.view">
        <field name="name">account.asset.parent.search</field>
        <field name="model">account.asset.parent</field>
        <field name="arch" type="xml">
            <search string="Parent Asset">
                <field
                    name="name"
                    string="Parent Asset"
                    filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"
                />
                <separator />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
                <group name="groupby">
                    <filter
                        name="group_by_company"
                        string="Company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="action_account_asset_parent" model="ir.actions.act_window">
        <field name="name">Parent Asset</field>
        <field name="res_model">account.asset.parent</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="account_asset_parent_menu"
        name="Parent Asset"
        action="action_account_asset_parent"
        parent="account_asset_management.menu_finance_assets"
    />
</odoo>
