<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <record id="account_asset_sub_state_view_form" model="ir.ui.view">
        <field name="name">account.asset.sub.state.form</field>
        <field name="model">account.asset.sub.state</field>
        <field name="arch" type="xml">
            <form string="Asset Sub-Status">
                 <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <group>
                        <group name="group_left">
                            <field name="active" invisible="1" />
                            <field name="name" />
                            <field
                                name="company_id"
                                widget="selection"
                                groups="base.group_multi_company"
                            />
                            <field name="note" />
                        </group>
                        <group name="group_right">
                            <field name="draft" />
                            <field name="open" />
                            <field name="close" />
                            <field name="removed" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="account_asset_sub_state_view_tree" model="ir.ui.view">
        <field name="name">account.asset.sub.state.tree</field>
        <field name="model">account.asset.sub.state</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="show"
                />
                <field name="draft" />
                <field name="open" />
                <field name="close" />
                <field name="removed" />
            </tree>
        </field>
    </record>
    <record id="account_asset_sub_state_view_search" model="ir.ui.view">
        <field name="name">account.asset.sub.state.search</field>
        <field name="model">account.asset.sub.state</field>
        <field name="arch" type="xml">
            <search string="sub.state Asset">
                <field name="name" string="Asset Sub-Status" />
                <separator />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
                <group name="groupby">
                    <filter
                        name="group_by_company"
                        string="Company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="action_account_asset_sub_state" model="ir.actions.act_window">
        <field name="name">Asset Sub-Status</field>
        <field name="res_model">account.asset.sub.state</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="account_asset_sub_state_menu"
        name="Asset Sub-Status"
        action="action_account_asset_sub_state"
        parent="account_asset_management.menu_finance_config_assets"
    />
</odoo>
