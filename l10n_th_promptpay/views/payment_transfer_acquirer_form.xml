<odoo>
  <data>
    <template id="payment_promptpay_web_display" inherit_id="website_sale.confirmation">
      <xpath expr="//table" position="after">
        <t t-set="payment_tx_id" t-value="order.get_portal_last_transaction()"/>
        <t t-if="payment_tx_id.acquirer_id.qr_code_promptpay and payment_tx_id.acquirer_id.provider == 'transfer'">
          <div class="oe_website_sale_tx_status mt-3">
            <div class="card bg-info">
              <div class="card-header">
                <h3>PromptPay QR Code</h3>
              </div>
              <div class="card-body">
                <div class="container">
                  <div class="row">
                    <div class="col-sm-4">
                      <div class="p-auto">
                        <img class="float-left" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', payment_tx_id.acquirer_id.promptpayPayload(payment_tx_id.amount) , 150, 150)"/>
                      </div>
                    </div>
                    <div class="col-sm-8">
                      <div class="p-3">

                        <ul class="list-group">
                          <li class="list-group-item d-flex justify-content-between align-items-center">
                          PromptPay ID
                            <span class="badge badge-primary badge-pill">
                              <t t-esc="payment_tx_id.acquirer_id.promptpay_id"/>
                            </span>
                          </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center">
                            Amount
                            <span class="badge badge-primary badge-pill">
                              <t t-esc="payment_tx_id.amount"/>
                            </span>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </t>
      </xpath>
    </template>
  </data>
</odoo>