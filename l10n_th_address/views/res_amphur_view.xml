<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Amphur/Khet -->
    <record id="view_amphur_form" model="ir.ui.view">
        <field name="name">amphur.form</field>
        <field name="model">res.amphur</field>
        <field name="arch" type="xml">
            <form name="amphur" string="Amphur/Khet">
                <header>
                </header>
                <sheet>
                    <field name="id" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="name_eng"/>
                        <field name="code"/>
                        <field name="province_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <group string="Tambons/Khwaengs">
                        <field name="tambon_ids" nolabel="1"
                               context="{'default_amphur_id': id}">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="name_eng"/>
                                <field name="amphur_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_amphur_tree" model="ir.ui.view">
        <field name="name">amphur.tree</field>
        <field name="model">res.amphur</field>
        <field name="arch" type="xml">
            <tree name="amphur" string="Amphurs/Khets">
                <field name="name"/>
                <field name="name_eng"/>
                <field name="code"/>
                <field name="tambon_ids"/>
                <field name="province_id"/>
            </tree>
        </field>
    </record>
    <record id="action_amphur" model="ir.actions.act_window">
        <field name="name">Amphurs/Khets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.amphur</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
