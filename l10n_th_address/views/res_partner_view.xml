<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_type']" position="after">
                <field name="title" string="Title"
                       placeholder="Title"
                       attrs="{'invisible': [('is_company', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='street']" position="attributes">
                <attribute name="placeholder">Address</attribute>
                <attribute name="class">o_address_street</attribute>
            </xpath>
            <xpath expr="//field[@name='street2']" position="attributes">
                <attribute name="placeholder">Road...</attribute>
                <attribute name="class">o_address_street</attribute>
            </xpath>
            <xpath expr="//field[@name='zip']" position="attributes">
                <attribute name="placeholder">ZIP</attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@class='o_address_format']" position="inside">
                <field name="alley" placeholder="Soi Patanakarn" nolable="0"
                />
                <field name="moo" placeholder="Moo"/>
                <field name="province_id" placeholder="Province" widget="selection"/>
                <field name="amphur_id" placeholder="Amphur" widget="selection"
                       domain="[('province_id','=', province_id)]"/>
                <field name="tambon_id" placeholder="Tambon" widget="selection"
                       domain="[('amphur_id','=', amphur_id)]"/>
                <field name="zip_id" placeholder="Zip" widget="selection"
                       domain="[('tambon_id','=', tambon_id)]"/>
                <field name="country_id" placeholder="Country" class="o_address_country"
                       options='{"no_open": True, "no_create": True}' invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='street2']" position="after">
                <field name="moo" placeholder="Moo"/>
                <field name="province_id" placeholder="Province" widget="selection"/>
                <field name="amphur_id" placeholder="Amphur" widget="selection"
                       domain="[('province_id','=', province_id)]"/>
                <field name="tambon_id" placeholder="Tambon" widget="selection"
                       domain="[('amphur_id','=', amphur_id)]"/>
                <field name="zip_id" placeholder="Zip" widget="selection"
                       domain="[('tambon_id','=', tambon_id)]"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='zip']" position="attributes">
                <attribute name="invisible"></attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='city']" position="attributes">
                <attribute name="invisible"></attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='state_id']" position="attributes">
                <attribute name="invisible"></attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='country_id']" position="attributes">
                <attribute name="invisible"></attribute>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="branch_code"
                       attrs="{'invisible': [('is_company', '!=', True)], 'required': [('is_company', '!=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='comment']"
                   position="after">
                <field name="branch_code" attrs="{'invisible': [('type', '=', 'contact')]}"/>
            </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="view_inherit_account_partner_tree">
        <field name="name">inherit.res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="phone" position="after">
                <field name="mobile"/>
            </field>
            <field name="email" position="after">
                <field name="street"/>
                <field name="alley"/>
                <field name="street2"/>
                <field name="tambon_id"/>
                <field name="amphur_id"/>
                <field name="province_id"/>
                <field name="zip"/>
            </field>
        </field>
    </record>
    <record id="inherit_view_res_partner_filter" model="ir.ui.view">
        <field name="name">inherit.res.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='name']" position="after">
                <field name="street"/>
                <field name="alley"/>
                <field name="street2"/>
                <field name="province_id"/>
                <field name="amphur_id"/>
                <field name="tambon_id"/>
                <field name="mobile"/>
                <field name="phone"/>
                <field name="zip"/>
            </xpath>
        </field>
    </record>
</odoo>
