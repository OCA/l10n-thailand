<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tambon -->
    <record id="view_tambon_form" model="ir.ui.view">
        <field name="name">tambon.form</field>
        <field name="model">res.tambon</field>
        <field name="arch" type="xml">
            <form name="tambon" string="Tambon/Khwaeng">
                <header>
                </header>
                <sheet>
                    <field name="id" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="name_eng"/>
                        <field name="amphur_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tambon_tree" model="ir.ui.view">
        <field name="name">tambon.tree</field>
        <field name="model">res.tambon</field>
        <field name="arch" type="xml">
            <tree name="tambon" string="Tambons/Khwaengs">
                <field name="name"/>
                <field name="name_eng"/>
                <field name="amphur_id"/>
            </tree>
        </field>
    </record>
    <record id="action_tambon" model="ir.actions.act_window">
        <field name="name">Tambons/Khwaengs</field>
        <field name="res_model">res.tambon</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
