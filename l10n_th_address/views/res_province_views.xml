<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Province -->
    <record id="view_province_form" model="ir.ui.view">
        <field name="name">province.form</field>
        <field name="model">res.province</field>
        <field name="arch" type="xml">
            <form name="province" string="Province">
                <header>
                </header>
                <sheet>
                    <field name="id" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="name_eng"/>
                        <field name="code"/>
                    </group>
                    <group string="Amphurs/Khets">
                        <field name="amphur_ids" nolabel="1"
                               context="{'default_province_id': id}">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="name_eng"/>
                                <field name="code"/>
                                <field name="province_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_province_tree" model="ir.ui.view">
        <field name="name">province.tree</field>
        <field name="model">res.province</field>
        <field name="arch" type="xml">
            <tree name="province" string="Provinces">
                <field name="name"/>
                <field name="name_eng"/>
                <field name="code"/>
                <field name="amphur_ids"/>
            </tree>
        </field>
    </record>
    <record id="action_province" model="ir.actions.act_window">
        <field name="name">Provinces</field>
        <field name="res_model">res.province</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
