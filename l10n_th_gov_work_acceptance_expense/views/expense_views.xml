<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">view.hr.expense.sheet.form</field>
        <field name="model">hr.expense.sheet</field>
        <field
            name="inherit_id"
            ref="hr_expense_work_acceptance.view_hr_expense_sheet_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_wa']" position="attributes">
                <attribute name="attrs">{
                    'invisible': ['|', '|', ('state', 'not in', ('draft', 'submit', 'approve')), ('wa_accepted', '=', True), ('advance', '!=', False)]}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
