<odoo>
    <record id="tax_report_wizard_form" model="ir.ui.view">
        <field name="name">tax.report.wizard.form</field>
        <field name="model">tax.report.wizard</field>
        <field
            name="inherit_id"
            ref="l10n_th_account_tax_report.tax_report_wizard_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_id']" position="after">
                <field
                    name="branch_ids"
                    widget="many2many_tags"
                    domain="[('company_id', '=', company_id)]"
                />
            </xpath>
        </field>
    </record>
</odoo>
