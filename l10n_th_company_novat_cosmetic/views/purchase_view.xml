<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <field name="order_line" position="before">
                <div
                    class="oe_right"
                    attrs="{'invisible': [('company_novat', '=', False)]}"
                >
                    <field name="company_novat" invisible="1" />
                    <label for="cosmetic_vat" />
                    <field
                        name="cosmetic_vat"
                        class="oe_inline"
                        attrs="{'readonly': ['|', ('set_cosmetic_vat', '=', True), ('state', '!=', 'draft')]}"
                    />
                    <field
                        name="set_cosmetic_vat"
                        widget="boolean_toggle"
                        states="draft"
                    />
                </div>
            </field>
            <field name="amount_total" position="after">
                <separator />
                <field
                    name="cosmetic_untaxed"
                    attrs="{'invisible': [('cosmetic_vat', '=', 0)]}"
                    decoration-success="True"
                />
                <field
                    name="cosmetic_tax"
                    attrs="{'invisible': [('cosmetic_vat', '=', 0)]}"
                    decoration-success="True"
                />
            </field>
            <xpath
                expr="//field[@name='order_line']//field[@name='price_subtotal']"
                position="after"
            >
                <field name="cosmetic_vat" invisible="1" />
                <field
                    name="cosmetic_price_unit"
                    attrs="{'invisible': [('cosmetic_vat', '=', 0)]}"
                    optional="hide"
                    decoration-success="cosmetic_vat > 0 and cosmetic_price_unit > 0"
                    decoration-danger="cosmetic_vat > 0 and cosmetic_price_unit == 0"
                />
                <field
                    name="cosmetic_price_subtotal"
                    attrs="{'invisible': [('cosmetic_vat', '=', 0)]}"
                    optional="hide"
                    decoration-success="cosmetic_vat > 0 and cosmetic_price_unit > 0"
                    decoration-danger="cosmetic_vat > 0 and cosmetic_price_unit == 0"
                />
            </xpath>

        </field>
    </record>
</odoo>
