<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.view.account.payment.form</field>
        <field name="model">account.payment</field>
        <field eval="2" name="priority" />
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    class="oe_stat_button"
                    name="button_wht_certs"
                    string="WHT Certs"
                    type="object"
                    groups="account.group_account_invoice"
                    attrs="{'invisible':[('wht_cert_ids','=',[])]}"
                    icon="fa-bars"
                />
                <field name="wht_cert_ids" invisible="1" />
            </div>
            <xpath expr="//header[last()]" position="after">
                <field name="wht_cert_status" invisible="1" />
                <field name="move_type" invisible="1" />
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': ['|', ('wht_cert_status', '!=', 'none'), ('state', '!=', 'posted')]}"
                >
                    This entry containg withholding tax, but no withholding tax certs. created yet.
                    <button
                        name="create_wht_cert"
                        string="⇒ Create withholding tax cert."
                        type="object"
                        class="oe_link"
                        states="posted"
                        title="Create withholding tax certificate objects, based on withholding moves"
                    />
                </div>
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': ['|', ('move_type', '!=', 'entry'), ('wht_cert_status', '!=', 'draft')]}"
                >
                    Withholding tax certs. created but still draft.
                    <button
                        id="link_wht_certs"
                        name="button_wht_certs"
                        string="⇒ Show withholding tax certs"
                        type="object"
                        class="oe_link"
                        states="posted"
                    />
                </div>
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': ['|', ('move_type', '!=', 'entry'), ('wht_cert_status', '!=', 'cancel')]}"
                >
                    All related withholding tax certs. was cancelled.
                    <button
                        name="button_wht_certs"
                        string="⇒ Show withholding tax certs"
                        type="object"
                        class="oe_link"
                    />
                </div>
            </xpath>
            <button name="button_open_invoices" position="before">
                <button
                    class="oe_stat_button"
                    name="button_journal_entries"
                    string="Journal Entries"
                    type="object"
                    groups="account.group_account_user"
                    attrs="{'invisible':[('move_id','=',False)]}"
                    icon="fa-bars"
                />
            </button>
            <button name="action_post" position="after">
                <field name="to_clear_tax" invisible="1" />
                <button
                    name="clear_tax_cash_basis"
                    type="object"
                    string="Clear Tax"
                    class="oe_highlight"
                    attrs="{'invisible': ['|', ('to_clear_tax', '=', False), ('state', '!=', 'posted')]}"
                />
            </button>
            <field name="move_id" position="after">
                <field
                    name="tax_invoice_move_id"
                    attrs="{'invisible': [('tax_invoice_move_id', '=', False)]}"
                />
            </field>
            <group position="after">
                <notebook attrs="{'invisible': [('tax_invoice_ids', '=', [])]}">
                    <page string="Tax Invoice" name="tax_invoice">
                        <field name="tax_invoice_ids">
                            <tree
                                editable="bottom"
                                string="Tax Invoices"
                                create="0"
                                delete="1"
                            >
                                <field name="to_clear_tax" invisible="1" />
                                <field name="account_id" optional="hide" />
                                <field name="partner_id" optional="hide" />
                                <field
                                    name="tax_invoice_number"
                                    attrs="{'readonly': [('to_clear_tax', '=', False)]}"
                                />
                                <field
                                    name="tax_invoice_date"
                                    attrs="{'readonly': [('to_clear_tax', '=', False)]}"
                                />
                                <field name="tax_base_amount" />
                                <field name="balance" sum="Total Tax" />
                                <button
                                    name="copy"
                                    string="Split"
                                    type="object"
                                    icon="fa-files-o"
                                    attrs="{'invisible': [('to_clear_tax', '=', False)]}"
                                />
                            </tree>
                        </field>
                    </page>
                </notebook>
                <group
                    id="wht_move"
                    string="Withholding Moves"
                    attrs="{'invisible': [('wht_move_ids', '=', [])]}"
                >
                    <field name="wht_move_ids" nolabel="1">
                        <tree
                            editable="bottom"
                            string="Withholding Moves"
                            create="0"
                            delete="0"
                        >
                            <field name="date" invisible="1" />
                            <field name="calendar_year" invisible="1" />
                            <field name="partner_id" readonly="1" />
                            <field name="wht_cert_income_type" />
                            <field name="amount_income" />
                            <field name="amount_wht" />
                            <field name="is_pit" />
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>
</odoo>
