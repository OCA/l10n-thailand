<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.view.account.payment.form</field>
        <field name="model">account.payment</field>
        <field eval="2" name="priority" />
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    class="oe_stat_button"
                    name="button_wht_certs"
                    string="WHT Certs"
                    type="object"
                    groups="account.group_account_invoice"
                    attrs="{'invisible':[('wht_cert_ids','=',[])]}"
                    icon="fa-bars"
                />
                <field name="wht_cert_ids" invisible="1" />
                <field name="wht_cert_cancel" invisible="1" />
            </div>
            <button name="button_open_invoices" position="before">
                <button
                    class="oe_stat_button"
                    name="button_journal_entries"
                    string="Journal Entries"
                    type="object"
                    groups="account.group_account_user"
                    attrs="{'invisible':[('move_id','=',False)]}"
                    icon="fa-bars"
                />
            </button>
            <button name="action_post" position="after">
                <field name="to_clear_tax" invisible="1" />
                <button
                    name="clear_tax_cash_basis"
                    type="object"
                    string="Clear Tax"
                    class="oe_highlight"
                    attrs="{'invisible': ['|', ('to_clear_tax', '=', False), ('state', '!=', 'posted')]}"
                />
            </button>
            <field name="move_id" position="after">
                <field
                    name="tax_invoice_move_id"
                    attrs="{'invisible': [('tax_invoice_move_id', '=', False)]}"
                />
            </field>
            <group position="after">
                <notebook attrs="{'invisible': [('tax_invoice_ids', '=', [])]}">
                    <page string="Tax Invoice" name="tax_invoice">
                        <field name="tax_invoice_ids">
                            <tree
                                editable="bottom"
                                string="Tax Invoices"
                                create="0"
                                delete="1"
                            >
                                <field name="to_clear_tax" invisible="1" />
                                <field name="account_id" optional="hide" />
                                <field name="partner_id" optional="hide" />
                                <field
                                    name="tax_invoice_number"
                                    attrs="{'readonly': [('to_clear_tax', '=', False)]}"
                                />
                                <field
                                    name="tax_invoice_date"
                                    attrs="{'readonly': [('to_clear_tax', '=', False)]}"
                                />
                                <field name="tax_base_amount" />
                                <field name="balance" sum="Total Tax" />
                                <button
                                    name="copy"
                                    string="Split"
                                    type="object"
                                    icon="fa-files-o"
                                    attrs="{'invisible': [('to_clear_tax', '=', False)]}"
                                />
                            </tree>
                        </field>
                    </page>
                </notebook>
                <group
                    name="pit"
                    string="Personal Income Tax"
                    attrs="{'invisible': [('pit_move_ids', '=', [])]}"
                >
                    <field name="pit_move_ids" nolabel="1">
                        <tree editable="bottom" string="PIT" create="1" delete="1">
                            <field name="date" invisible="1" />
                            <field name="calendar_year" invisible="1" />
                            <field name="partner_id" readonly="1" />
                            <field name="wht_cert_income_type" />
                            <field name="amount_income" />
                            <field name="amount_wht" />
                            <field name="is_pit" />
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>
</odoo>
