<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <page id="invoice_tab" position="after">
                <page id="tax_invoice" string="Tax Invoice" attrs="{'invisible': [('type', '=', 'entry')]}">
                    <field name="tax_invoice_ids">
                        <tree editable="bottom" string="Tax Invoices" create="0" delete="0">
                            <field name="account_id"/>
                            <field name="tax_invoice_number"/>
                            <field name="tax_invoice_date"/>
                            <field name="tax_base_amount"/>
                            <field name="balance"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

</odoo>
